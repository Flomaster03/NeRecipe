<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">
    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.recipes.ui.ui.FeedFragment"
        android:label="FeedFragment" >
        <action
            android:id="@+id/action_feedFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <argument
            android:name="ShowAppBar"
            android:defaultValue="true" />
        <action
            android:id="@+id/action_feedFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="ru.netology.recipes.ui.ui.FavouriteFragment"
        android:label="FavouriteFragment">
        <argument
            android:name="ShowAppBar"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/filterFragment"
        android:name="ru.netology.recipes.ui.ui.FilterFragment"
        android:label="FilterFragment">
        <argument
            android:name="ShowAppBar"
            android:defaultValue="true" />
    </fragment>

</navigation>